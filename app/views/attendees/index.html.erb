<div class="container">

<h1>Guest list</h1>
<p class="lead">Keep track of all those event attendees.  </p>


<section> 
	<ul> 
		<li style="display: none;"><a href="#"><i class="icon icon-download"> </i> <span> Download list</span> </a></li>
		<li><a href="#"><i class="icon icon-print" onclick="window.print();"> </i> <span>Print list </span></a></li>		
	</ul>
</section>

    <% if !@attendees.empty? %>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th><!-- 
      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.first_name %></td>
        <td><%= attendee.last_name %></td>
        <td><%= attendee.email %></td>
        <% if (attendee.user_id) == current_user.id.to_s %>
   <!--      <td><%= link_to 'Show', attendee %></td>
     
        <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
        <td><%= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

    <% else %>
       No guests!
    <% end %>

