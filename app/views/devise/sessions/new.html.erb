<% title 'Log In' %>
<% meta_description 'Log into your EventCreate account.' %>

<div class="login-header"> 
  <a class="logo" href="/"><span>Event Create</span></a>
</div>

<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="input-group">
      <label>Email Address</label>
      <%= f.email_field :email, autofocus: true, :class => 'input-primary', :placeholder => 'email@email.com' %>
    </div>


    <div class="input-group">
      <label>Password</label>
      <%= f.password_field :password, autocomplete: "off", :class => 'input-primary', :placeholder => 'Password' %>
    </div>

  
    <% if devise_mapping.rememberable? -%>
      <div class="field" style="display: none;">
        <%= f.check_box :remember_me, {:checked => "checked"}  %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>


    <div class="input-group">
      <%= f.submit "Sign in", :class => 'btn btn-large' %>
      <p> <%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
    </div>




  <% end %>

  <%# render "devise/shared/links" %>
</div>


<div class="login-footer">
  <a href="#"><img src="<%= asset_path 'event_create_logo_gray.png' %>"/> </a>
  <p> Â©2016 EventCreate. All Rights Reserved. </p>
</div>


<script type="text/javascript">

$( document ).ready(function() {

  var validator = $("#new_user").validate({
    rules: {
      name: "required",
      "user[email]": {
        required: true
      },
      "user[password]": {
        required: true
      }

    },
    messages : {
      "user[email]": 'Please enter your email',
      "user[password]": 'Please enter your password'
    }
  });



});

</script>