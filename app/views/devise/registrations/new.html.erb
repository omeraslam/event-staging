<div class="container registration">
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><!-- 
    <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, :class => 'input-primary', :placeholder => 'Email' %>
  </div>

  <div class="field">
   <!--  <%= f.label :password %> -->
    <% if @validatable %>
   <!--  <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
    <%= f.password_field :password, autocomplete: "off", :class => 'input-primary', :placeholder => 'Password (8 character min)' %>
  </div>

  <div class="field">
   <!--  <%= f.label :password_confirmation %><br /> -->
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'input-primary', :placeholder => 'Password confirmation' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn' %>
  </div>
<% end %>


<%= render "devise/shared/links" %>

</div>
