<% title 'Sign Up' %>
<% meta_description 'Create your EventCreate account.' %>


<div class="login-header"> 
  <a class="logo" href="/"><span>Event Create</span></a>
</div>

<div class="container">
  <h2>Get started with a free account</h2>
  <p class="lead"> Sign up in 30 seconds. No credit card required.
  Already have an EventCreate account?  <%= link_to "Log in here.", new_session_path(resource_name) %> </p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group">
      <label>Your email address</label>
      <%= f.email_field :email, autofocus: true, :class => 'input-primary', :placeholder => 'email@email.com' %>
    </div>

    <div class="input-group">
      <label>Password</label>
      <%= f.password_field :password, autocomplete: "off", :class => 'input-primary', :placeholder => 'Password ' %>
    </div>

    <div class="input-group">
      <label>Confirm Password</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'input-primary', :placeholder => 'Confirm password' %>
    </div>

    <div class="input-group">
      <%= f.submit "Create my free account", :class => 'btn btn-large' %>
      <p> By signing up, you agree to the <%= link_to 'terms and conditions', terms_path, :target => '_blank' %>.</p>
    </div>

  <% end %>

<%#render "devise/shared/links" %>
</div>

<div class="login-footer">
  <a href="#"><img src="<%= asset_path 'event_create_logo_gray.png' %>"/> </a>
  <p> Â©2016 EventCreate. All Rights Reserved. </p>
</div>
