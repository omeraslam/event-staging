<% title 'Reset my password ' %>
<% meta_description 'Create your EventCreate account.' %>

<div class="login-header"> 
  <a class="logo" href="/"><span>Event Create</span></a>
</div>

<div class="container">

<h2>Password reset</h2>
<p class="lead"> We'll send you password reset instructions to your email address.</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

   <div class="input-group">
   		<label>Email Address</label>
    	<%= f.email_field :email, autofocus: true, :placeholder => 'email@email.com' %>
   </div>

    <div class="input-group">
      	<%= f.submit "Reset my password", :class => 'btn' %>
    </div>

<% end %>
 

<%# render "devise/shared/links" %>

</div>


<div class="login-footer">
  <a href="#"><img src="<%= asset_path 'event_create_logo_gray.png' %>"/> </a>
  <p> Â©2016 EventCreate. All Rights Reserved. </p>
</div>