<% title @event.name.html_safe %>
<% meta_description 'Create stunning websites in seconds.' %>
<div class="show-container buy-container">
    



    <div class="event-page 1 visible event-buy-page" style="background-image: url(<%= image_path(background_checker(@event, false), :width => 100) %> ) !important">
      
      <div class="overlay" style="opacity: <%= @event.bg_opacity %>;background-color:<%= @event.bg_color %>;"></div>

      <div class="header"> 
         <h2 class="hidden"> <%= @event.name %></h2>
      </div>

    </div> 


    <div class="confirm-container">

  
    <% if @event.confirmation_text.nil? %>
      <h1> You're all set, <%= @purchase.first_name %>! </h1>
      <p> You're going to <%= @event.name %> on <%= @event.date_start.to_date.strftime("%B") %> <%= @event.date_start.to_date.strftime("%e, ") %> <%= @event.date_start.to_date.strftime("%Y") %>! Your order has been successfully processed, and we've sent your tickets and a receipt to <%= @purchase.email %>. We look forward to seeing you there.</p>

      <% else %>
        <p>
        <%= @event.confirmation_text %>
        </p>
      <% end %>
      

      <div class="ticket-btn-container">
<%= link_to ('<i class="icon icon-print"> </i> Print My Tickets Now ').html_safe, show_ticket_path(:oid => @purchase.confirm_token, format: :pdf), :class => 'btn', data: { type: :pdf }, :target => '_blank'   %> </div>


      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= @eventurl %>" class="btn btn-facebook"><i class="icon icon-facebook"> </i>Share on Facebook</a> 


    </div>

  



    

