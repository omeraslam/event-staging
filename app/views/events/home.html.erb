
<% meta_description '' %>


<style type="text/css">
  html, body {
    height: 100%;
  }
  .wrapper {
    width: 100%;
    //height: 100%;
    background-position: center center;
    background-size: cover;
  }



  .wrapper {
    //padding: 120px 70px;
    color: white;
  }

  .hero-header {
    padding: 120px 70px;
    text-align: center;
    background: transparent;
  }

  h1, h2{
    text-align: center;
  }

  .container {
    padding: 40px 70px;
  }

  ul.upcoming-events {
    margin: 0 auto;
    width: 80%;
    text-align: center;
  }

  ul.upcoming-events li {
    display: inline-block;
    width: 200px;
    height: 200px;
    background: #222;
    margin-top: 40px;
    margin-right: 20px;
  }
   ul.upcoming-events li img {
    width: 100px;
   }

   .widget {
    margin: 80px 0;
   }
   .widget h3 {
    margin-bottom: 20px;
   }

   .container {
    background-color: white;
   }

 #event-page-logo .event-page-logo-container {
    position: absolute;
    top: 0;
    left: 0;
    border-left: 180px solid rgba(21, 21, 21, 0.5);
    border-bottom: 180px solid transparent;
    z-index: 9999;
    transition: border-left .5s ease-out;
}

    #event-page-logo .event-page-logo {
    background-image: url(../../../assets/event_create_logo_vertical.png);
    background-size: contain;
    position: absolute;
    top: 12px;
    left: 12px;
    width: 110px;
    height: 110px;
    z-index: 9999;
}

.hero-img {
    content: ' ';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.6;
    background-image:url(<%= @user.gravatar_url %>);
    background-repeat: no-repeat;
    background-position: 50% 50%;
    -ms-background-size: cover;
    -o-background-size: cover;
    -moz-background-size: cover;
    -webkit-background-size: cover;
    background-size: cover;
    overflow: hidden;
}
.hero-header {
  position: relative;
}

.avatar {
  border-radius: 50%;
}

</style>

<div class="wrapper">

<a href="https://www.eventcreate.com/" title="EventCreate" target="_blank" id="event-page-logo">
          <div class="event-page-logo-container"></div>
          <div class="event-page-logo"></div> 
      </a>



<div class="event-share">
            <a href="https://www.facebook.com/sharer/sharer.php?u=http://bit.ly/1PQJMiL"><i class="icon icon-facebook-circled"> </i> </a>
            <a href="https://twitter.com/home?status=Registration%20is%20now%20open%20at%20http://bit.ly/1PQJMiL"><i class="icon icon-twitter-circled"> </i> </a>
          </div>
<div class="hero-header" style="">
<h1>
  <%= image_tag @user.gravatar_url, :class => 'avatar' %><br/><span><%= @user.username %></span></h1>


<p class="lead"><%= @user.description %></p>
<div class="hero-img"></div>

</div>

</div>

<div class="container">




  <h2>Upcoming Events</h2>
    <% if @events.empty? %>   
  <div class="empty">
    <h2>Well, this is uneventful; you don't have any events yet. Get on that! </h2>
      <% if @disable_create %>
        <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, upgrade_path, class: 'btn btn-obvious' %>
        <% else %>
        <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, create_path, class: 'btn btn-obvious' %> 
        <% end %>
  </div>
  <% end %> 
  <ul class="upcoming-events">
<% @events.each do |event| %>
<li class="event-tile">
<%= link_to slugger_path(event) do %>
  <div style="background:url(<%= background_checker(event, true)%>); width: 100%; height: 100%; background-size: cover; background-position: 0 0;">
  </div>
   <%= event.name %><br/>
   <% if !event.date_start.empty? %>
    <%= event.date_start.to_date.strftime("%B %d, %Y") %>
   <% end %>
<% end %>
 </li>
<% end %>

</ul>
