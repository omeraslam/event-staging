<% title @user.email + 'events' %>
<% meta_description '' %>
<% @title = 'Salamat Yoga' %>
<% @style = 'yoga' %>

<style type="text/css">
  html, body {
    height: 100%;
  }
  .wrapper {
    width: 100%;
    //height: 100%;
    background-position: center center;
    background-size: cover;
  }

  .wrapper.band {
    background-image: url(../assets/brots.jpg);
  }

  .wrapper.yoga {

    background-image: url(../assets/yoga.jpg);
  }

  .wrapper {
    //padding: 120px 70px;
    color: white;
  }

  .hero-header {
    padding: 120px 70px;
    text-align: center;
    background: transparent;
  }

  h1, h2{
    text-align: center;
  }

  .container {
    padding: 40px 70px;
  }

  ul.upcoming-events {
    margin: 0 auto;
    width: 80%;
    text-align: center;
  }

  ul.upcoming-events li {
    display: inline-block;
    width: 200px;
    height: 200px;
    background: #222;
    margin-top: 40px;
    margin-right: 20px;
  }
   ul.upcoming-events li img {
    width: 100px;
   }

   .widget {
    margin: 80px 0;
   }
   .widget h3 {
    margin-bottom: 20px;
   }

   .container {
    background-color: white;
   }

 #event-page-logo .event-page-logo-container {
    position: absolute;
    top: 0;
    left: 0;
    border-left: 180px solid rgba(21, 21, 21, 0.5);
    border-bottom: 180px solid transparent;
    z-index: 9999;
    transition: border-left .5s ease-out;
}

    #event-page-logo .event-page-logo {
    background-image: url(../assets/event_create_logo_vertical.png);
    background-size: contain;
    position: absolute;
    top: 12px;
    left: 12px;
    width: 110px;
    height: 110px;
    z-index: 9999;
}
</style>

<div class="wrapper <%= @style %>">

<a href="https://www.eventcreate.com/" title="EventCreate" target="_blank" id="event-page-logo">
          <div class="event-page-logo-container"></div>
          <div class="event-page-logo"></div> 
      </a>



<div class="event-share">
            <a href="https://www.facebook.com/sharer/sharer.php?u=http://bit.ly/1PQJMiL"><i class="icon icon-facebook-circled"> </i> </a>
            <a href="https://twitter.com/home?status=Registration%20is%20now%20open%20at%20http://bit.ly/1PQJMiL"><i class="icon icon-twitter-circled"> </i> </a>
