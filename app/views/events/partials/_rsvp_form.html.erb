
<div id="attendee-form" name="attendee-form" >

	<div class="modal-header modal-header-light">
		    <button data-remodal-action="close" class="remodal-close"></button>
		    <i class="icon icon-line-email" style="display: none;"> </i>
		    <h2>Select tickets</h2>
 </p>
		  
	</div>


	<div class="modal-body">
	
  
	<div class="tickets">


       <% @tickets.each do |ticket| %>



       <div class="ticket">


           
            <%= select_tag options_for_select((0..ticket.ticket_limit).step(1)) %>


            <h3><%= ticket.title %></h3>
            <p><%= number_to_currency(ticket.price) %></p>
            <p><%= ticket.description %></p>
            <p class="small"> Available until <%= ticket.stop_date.strftime('%B %d, %Y') %></p>



          
          </div>




      


        <% end %>

		

	</div>



	<button class="btn">Continue</button>

	
  
  </div>

</div>