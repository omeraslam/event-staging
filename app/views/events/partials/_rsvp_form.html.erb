
<div id="attendee-form" name="attendee-form" >

	<div class="modal-header modal-header-light">
		    <button data-remodal-action="close" class="remodal-close"></button>
		    <i class="icon icon-line-email" style="display: none;"> </i>
		    <h2>Register Now</h2>
		    <p>Complete your registration now for <%= @event.name %>.</h1> 
 </p>
		  
	</div>


	<div class="modal-body">
	
  <%= form_for(@attendee, remote: true, html: {role: :form, 'data-model' => 'attendee'}) do |f| %>
  <% if @attendee.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@attendee.errors.count, "error") %> prohibited this attendee from being saved:</h2>

    <ul>
      <% @attendee.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>



  


	<div class="input-group">
		<div class="input-group-inline">
			<label>First name:</label>
			<%= f.text_field :first_name, :class => 'input input-large', :placeholder => 'First Name' %>
		</div>
		<div class="input-group-inline">
			<label>Last name:</label>
			<%= f.text_field :last_name, :class => 'input input-large', :placeholder => 'Last Name' %>
		</div>
	</div>
	
	
	<div class="input-group">
		<label>Email Address:</label>
		 <%= f.text_field :email, :class => 'input input-large', :placeholder => 'email@email.com'  %>
		 <p>We'll send you a confirmation of your RSVP.  </p>
	</div>


  <%= hidden_field_tag 'attendee_user_id', @attendee.id%>
  <%= hidden_field_tag 'event_id', @event.id%>
  <%= hidden_field_tag 'user_id', @event.user_id %>
  
  
  <div class="input-group">
  	<%= f.submit "Complete Registration", :class => 'btn' %>
  	<p> This event registration form is powered by EventCreate and secured with 256-bit encryption. By clicking "Complete Registration," I acknowledge that I have read and agree with the EventCreate's <a target="_blank" href="https://www.eventcreate.com/terms">Terms of Service</a> and <a target="_blank" href="https://www.eventcreate.com/privacy">Privacy policy</a>. 
	</p>
  </div>

  <% end %>
  
  </div>

</div>