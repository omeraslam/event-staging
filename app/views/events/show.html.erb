
<div class="container event-container">



    <div class="event-page" style="background-image: url(<%= image_path(@event.background_img, :width => 100) if @event.background_img.present?  %>)">

    <div class="overlay"></div>

        <div class="event-info">

           <h1> <%= @event.name %></h1>

           <p class="lead">
              <%= @event.time %> | <%= @event.location %></p>

          </div>

          <!-- #B3193F -->
