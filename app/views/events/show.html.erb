    //show the loader
    $(".full-page-loader.saving").show().addClass("visible");

    //close the editor
    $(".editor-container").removeClass("visible");
    $(".tab.active").removeClass("active");
    
    //hide the publish button
    $(".event-editor-draft-container#event_draft").hide();

    published = true;    
    saveChanges(true);

  });







