  function saveChanges(showCallback) {

    newBg = $('#external_image').val()
    $.ajax({
      type: 'POST',
        url: String(window.location.href).replace('?editing=true', '').replace('?editing=true', '').replace('#', '') + '/updatetheme_post', //testing
        data: {event:{layout_id: layout, published: published, layout_style: theme, bg_color: newBgColor , bg_opacity: newBgOpacity, font_type: newFont, external_image: newBg, show_custom: newShowCustom  }},
    beforeSend: function(){
        
        changesExist = true;
        $("#editor-saving-status").html("<i class='icon icon-loader' style='font-size:30px;'> </i>").show();
    }
      }).done(function(data){
        //console.log(data);
        $('#layout_style').val(theme);
        changesExist = false;
        $("#editor-saving-status").text("Changes saved.").delay(4000).fadeOut();

        if (showCallback) {

          $(".full-page-loader.saving").hide().removeClass("visible");
          $(".event-editor-draft-container#event_published").show();
          eventModal.open();

        }

      });
    }

  });



  //warning before leave page
  window.onbeforeunload = function(e) {
    if(changesExist) {
      return 'You have unsaved pages. Please wait until we have finished saving your event';
    }
  };














