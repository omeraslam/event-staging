<%= form_for [@ticket], :url => {:action => 'create', :controller =>

 'tickets'} do |f| %>



  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <label>Ticket Name (required)</label>
    <%= f.text_field :title, class: 'input input-large', placeholder: 'General Admission' %>
  </div>
  <div class="input-group" >
    <%= f.label :description %>
    <%= f.text_area :description, class: 'input input-large textarea-small',  placeholder: 'Add a description to your ticket.' %>
  </div>
  <div class="input-group">
    <div class="input-group-inline input-group-addon">
      <label>Ticket Price</label>
      <div class="input-addon">$</div><%= f.number_field :price, class: 'input input-large', placeholder: '0.00' %> 
      <p> If your event is free, just leave blank (entering "0" is cool, too). </p>
    </div>
    <div class="input-group-inline">
      <label> Quantity Available</label>
      <%= f.number_field :ticket_limit, class: 'input input-large', placeholder: 'âˆž' %>
      <p> How many tickets are available? Leave blank if unlimited.</p>
    </div>
  </div>
  <div class="input-group input-expand">
  <p><a id="show-ticket-advanced-settings">Show advanced settings <i class="icon icon-arrow-down"> </i> </a></p>
  </div>
  <div id="ticket-advanced-settings" style="display:none;">
    <div class="input-group">
      <div class="input-group-inline">
        <label>Buy Limit</label>
        <%= f.number_field :buy_limit, class: 'input input-large', placeholder: '4' %>
        <p>Restrict the number of tickets one person can buy. (Defaults to 4 tickets)</p>
      </div>
    </div>
    <div class="input-group">
      <label>Tickets available until</label>
      <%= f.date_select :stop_date, class: 'input input-large'%>
    </div>
  </div>
  <div class="input-group actions">
    <%= f.submit 'Add New Ticket', class: 'btn btn-large' %>
  </div>
<% end %>
