<h1>Listing survey_questions</h1>

<table>
  <thead>
    <tr>
      <th>Question text</th>
      <th>Response required</th>
      <th>Description</th>
      <th>Answer text</th>
      <th>Field type</th>
      <th>Ticket</th>
      <th>Event</th>
      <th>Is active</th>
      <th>Free text active</th>
      <th>Free text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_questions.each do |survey_question| %>
      <tr>
        <td><%= survey_question.question_text %></td>
        <td><%= survey_question.response_required %></td>
        <td><%= survey_question.description %></td>
        <td><%= survey_question.answer_text %></td>
        <td><%= survey_question.field_type %></td>
        <td><%= survey_question.ticket_id %></td>
        <td><%= survey_question.event_id %></td>
        <td><%= survey_question.is_active %></td>
        <td><%= survey_question.free_text_active %></td>
        <td><%= survey_question.free_text %></td>
        <td><%= link_to 'Show', survey_question %></td>
        <td><%= link_to 'Edit', edit_survey_question_path(survey_question) %></td>
        <td><%= link_to 'Destroy', survey_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

