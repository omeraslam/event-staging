<% title "Manage Events" %>
<div class="event-header container"> 

	<div class="event-meta"> 
		<h1>my events </h1>
		<p class="lead">The key to your next big party is at your fingertips. Let's do this.
		</p>
	</div>

	

	<div class="event-status"> 
		<div class="event-share">
	 		<% if @disable_create %>
	        	<%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, upgrade_path, class: 'btn btn-obvious' %>
	        <% else %>
	        	<%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, create_path, class: 'btn btn-obvious' %> 
	        <% end %>

			<br><p class="small"> New event website and/or invite</p>
				
		</div>
	</div>
</div>

<div class="container">
	<% if @events.empty? %>		
	<div class="empty">
		<h2>Well, this is uneventful; you don't have any events yet. Get on that! </h2>
			<% if @disable_create %>
		    <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, upgrade_path, class: 'btn btn-obvious' %>
		    <% else %>
		    <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, create_path, class: 'btn btn-obvious' %> 
		    <% end %>
	</div>
	<% end %> 



		<div class="events-list">
			<% @event_num=0 %>
			<%  @events.each do |event| %>
			<div class="event ">

				<div class="image" style="background-image:url(<%= background_checker(event, true) %>);"> </div>
				<div class="details"> 
			
					<%= link_to event.name, slugger_path(event.slug, :editing => "true" ), :class => 'title' %> 
					
			

					<div class="time">
						
						<%= show_proper_date(event, false) %>

					</div>

	
					<div class="actions"> 
						<%= link_to 'Delete event', event_path(:id => event.id) , method: :delete, data: { confirm: 'Are you sure?' } %> 
					</div>


				</div>
			</div>	
			<% @event_num += 1 %>

			<% end %>
		</div>
	</div>

