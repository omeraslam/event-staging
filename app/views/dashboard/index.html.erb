<% title "Manage Events" %>
<div class="event-header container"> 

	<div class="event-meta"> 
		<h1>my events </h1>
		<p class="lead">The key to your next big party is at your fingertips. Let's do this.
		</p>
	</div>
	
	<div class="event-status"> 
		<div class="event-share">

	 		<% if @is_premium != 'active' && @disable_create %>
	        	<%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, upgrade_path, class: 'btn btn-obvious' %>
	        <% else %>
	        	<%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, create_path, class: 'btn btn-obvious' %> 
	        <% end %>

			<br><p class="small"> New event website and/or invite</p>
				
		</div>
	</div>
</div>

<div class="container">

	<% if @events.empty? %>		
	<div class="empty">
		<h2>Well, this is uneventful; you don't have any events yet. Get on that! </h2>
			<% if @is_premium != 'active' && @disable_create %>
		    <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, upgrade_path, class: 'btn btn-obvious' %>
		    <% else %>
		    <%= link_to "<i class='icon icon-plus'></i> create new event".html_safe, create_path, class: 'btn btn-obvious' %> 
		    <% end %>
	</div>
	<% end %> 



		<% if @is_premium != 'active' && @count_events.to_i >= @event_limit.to_i %>
			<p class="alert">Your current plan is limited to <%= pluralize(@event_limit, 'event') %>.
			. Please <%= link_to 'upgrade', upgrade_path %> to get full access. </p>
		<% end %>
		<div class="events-list">
			<% @event_num=0 %>
			<%  @events.each do |event| %>
			<div class="event <%= (@is_premium != 'active' && @event_num.to_i >= @event_limit.to_i )? 'inactive': 'active' %>">


				<div class="image" style="background-image:url(<%= background_checker(event, true) %>);"> </div>
				<div class="details"> 
				<% if @is_premium != 'active' && @event_num.to_i  >= @event_limit.to_i %>
					<div class="title"><%= event.name %></div> 
					<% else %>
					<%= link_to event.name, dashboard_event_path(:event => event.id), :class => 'title'  %> 
					
				<% end %>
					<div class="time">
						<% if(event.date_start != '' && !event.date_start.nil?) %>
						<%= event.date_start.to_date.strftime("%B %d") %> 
					
						<% if(event.date_end != '' && event.date_end != event.date_start) %>
						- <%= event.date_end.to_date.strftime("%B %d") %> 
						<% end %>

						<% if(!event.time_start.nil? && event.time_start != '') %>
						<%= event.time_start.to_time.strftime("%l:%M %p") %>
						<% end %>

						<% if(!event.time_end.nil? && event.time_end != '') %>
						- <%= event.time_end.to_time.strftime("%l:%M %p") %> 
						<% end %>
						<%else%>
						TBD
						<%end%> 
					</div>

				<% if @is_premium == 'active' || @event_num.to_i < @event_limit.to_i %>

					<div class="registrants"> 

						<%= link_to "<i class='icon icon-share-window'> </i> Launch website".html_safe, slugger_path(event.slug), :target => '_blank' %>	  		
					</div>

					<div class="actions"> 
						<%= link_to 'Edit event', dashboard_event_path(:event => event.id) + '#settings' %>
						<%= link_to 'Delete event', event_path(:id => event.id) , method: :delete, data: { confirm: 'Are you sure?' } %>
					</div>

				<% end %>

				</div>
			</div>	
			<% @event_num += 1 %>

			<% end %>
		</div>
	</div>
